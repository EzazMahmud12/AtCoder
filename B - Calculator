#include<bits/stdc++.h>
using namespace std;
#define e4 ios_base::sync_with_stdio(false); cin.tie(NULL)
#define endl '\n'
#define ll  long long
#define test_case int tc;cin>>tc;while(tc--)


int main() {


		 e4;

		 int i,c=0;

		 string s;

		 cin>>s;

		 for(i=0; i<s.size(); i++){
		 	if(s[i]=='0'){
		 		if(s[i+1]=='0'){
		 			c++;
		 			i++;
		 		}
		 		else{
		 			c++;
		 		}
		 	}
		 	else{
		 		c++;
		 	}
		 }


		 cout<<c;









		
}

			
